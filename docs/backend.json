{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": { "type": "string" },
        "nombre": { "type": "string" },
        "correo": { "type": "string", "format": "email" },
        "telefono": { "type": "string" },
        "fechaRegistro": { "type": "string", "format": "date-time" },
        "estado": { "type": "string", "enum": ["activo", "inactivo"] }
      },
      "required": ["id", "nombre", "correo", "telefono"]
    },
    "IndividualService": {
      "title": "Individual Service",
      "type": "object",
      "description": "Represents a single billable service for an event.",
      "properties": {
        "id": { "type": "string" },
        "categoria": { "type": "string" },
        "nombre": { "type": "string" },
        "descripcion": { "type": "string" },
        "precioUnitario": { "type": "number" },
        "tipoCobro": { "type": "string", "enum": ["unidad", "persona", "paquete"] }
      },
      "required": ["id", "categoria", "nombre", "precioUnitario", "tipoCobro"]
    },
    "Quote": {
      "title": "Quote",
      "type": "object",
      "description": "A quote generated by a user.",
      "properties": {
        "usuarioId": { "type": "string" },
        "cotizacionId": { "type": "string" },
        "nombreCliente": { "type": "string" },
        "correo": { "type": "string", "format": "email" },
        "telefono": { "type": "string" },
        "total": { "type": "number" },
        "fechaCotizacion": { "type": "string", "format": "date-time" },
        "estado": { "type": "string", "enum": ["pendiente", "enviado", "contactado", "en negociaci√≥n", "cerrado", "descartado"] },
        "origen": { "type": "string" },
        "tipoEvento": { "type": "string" },
        "personas": { "type": "number" },
        "fechaEvento": { "type": "string", "format": "date" },
        "horaInicio": { "type": "string", "format": "time" },
        "horaFin": { "type": "string", "format": "time" },
        "direccionSalon": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "categoria": { "type": "string" },
              "nombre": { "type": "string" },
              "cantidad": { "type": "number" },
              "precioUnitario": { "type": "number" },
              "subtotal": { "type": "number" }
            }
          }
        }
      },
      "required": ["usuarioId", "nombreCliente", "correo", "telefono", "total", "items", "estado", "origen", "tipoEvento", "personas", "fechaEvento", "horaInicio", "horaFin"]
    },
    "Seguimiento": {
      "title": "Seguimiento",
      "description": "Internal tracking for a quote.",
      "type": "object",
      "properties": {
        "cotizacionId": { "type": "string" },
        "usuarioId": { "type": "string" },
        "estado": { "type": "string" },
        "contactado": { "type": "boolean" },
        "fechaUltimoContacto": { "type": "string", "format": "date-time", "description": "Can be null" },
        "observaciones": { "type": "string" }
      },
      "required": ["cotizacionId", "usuarioId", "estado"]
    },
    "Reservation": {
        "title": "Reservation",
        "type": "object",
        "description": "Represents a booked date in the agenda.",
        "properties": {
            "fecha": { "type": "string", "format": "date" },
            "horaInicio": { "type": "string", "format": "time" },
            "horaFin": { "type": "string", "format": "time" },
            "quoteId": { "type": "string" },
            "userId": { "type": "string" }
        },
        "required": ["fecha", "horaInicio", "horaFin", "quoteId", "userId"]
    },
    "PlanBase": {
      "title": "Plan Base",
      "description": "Pricing for the base package based on number of people.",
      "type": "object",
      "properties": {
        "eventoTipo": { "type": "string" },
        "personas": { "type": "number" },
        "precio": { "type": "number" }
      }
    },
    "Comida": {
      "title": "Comida",
      "description": "Catering options.",
      "type": "object",
      "properties": {
        "tipo": { "type": "string", "enum": ["2Carnes", "3Carnes"] },
        "precioPorPersona": { "type": "number" }
      }
    },
    "Bebida": {
      "title": "Bebida",
      "description": "Non-alcoholic beverage options.",
      "type": "object",
      "properties": {
        "nombre": { "type": "string" },
        "precioPorPersona": { "type": "number" }
      }
    },
    "Licor": {
      "title": "Licor",
      "description": "Alcoholic beverage options.",
      "type": "object",
      "properties": {
        "nombre": { "type": "string" },
        "precioPorBotella": { "type": "number" }
      }
    },
    "Extra": {
      "title": "Extra",
      "description": "Additional items or services for an event.",
      "type": "object",
      "properties": {
        "nombre": { "type": "string" },
        "descripcion": { "type": "string" },
        "precio": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
     "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/users/{userId}/quotes/{quoteId}",
        "definition": {
            "entityName": "Quote",
            "schema": { "$ref": "#/entities/Quote" },
            "description": "Stores quotes generated by a specific user."
        }
      },
      {
        "path": "/cotizaciones/{quoteId}",
        "definition": {
          "entityName": "Quote",
          "schema": { "$ref": "#/entities/Quote" },
          "description": "Legacy quotes collection."
        }
      },
      {
        "path": "/seguimiento/{quoteId}",
        "definition": {
          "entityName": "Seguimiento",
          "schema": { "$ref": "#/entities/Seguimiento" },
          "description": "Internal quote tracking collection."
        }
      },
      {
        "path": "/servicios_individuales/{serviceId}",
        "definition": {
            "entityName": "IndividualService",
            "schema": { "$ref": "#/entities/IndividualService" },
            "description": "Publicly readable list of all individual services offered for the modular builder."
        }
      },
      {
        "path": "/reservations/{reservationId}",
        "definition": {
            "entityName": "Reservation",
            "schema": { "$ref": "#/entities/Reservation" },
            "description": "Publicly readable event agenda to check for availability."
        }
      },
      {
        "path": "/planesBase/{planId}",
        "definition": {
          "entityName": "PlanBase",
          "schema": { "$ref": "#/entities/PlanBase" },
          "description": "Stores base plan pricing for packaged quotes."
        }
      },
      {
        "path": "/comidas/{comidaId}",
        "definition": {
          "entityName": "Comida",
          "schema": { "$ref": "#/entities/Comida" },
          "description": "Stores food options for packaged quotes."
        }
      },
      {
        "path": "/bebidas/{bebidaId}",
        "definition": {
          "entityName": "Bebida",
          "schema": { "$ref": "#/entities/Bebida" },
          "description": "Stores drink options for packaged quotes."
        }
      },
      {
        "path": "/licores/{licorId}",
        "definition": {
          "entityName": "Licor",
          "schema": { "$ref": "#/entities/Licor" },
          "description": "Stores liquor options for packaged quotes."
        }
      },
      {
        "path": "/extras/{extraId}",
        "definition": {
          "entityName": "Extra",
          "schema": { "$ref": "#/entities/Extra" },
          "description": "Stores extra service options for packaged quotes."
        }
      }
    ]
  }
}
