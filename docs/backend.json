{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": { "type": "string" },
        "nombre": { "type": "string" },
        "correo": { "type": "string", "format": "email" },
        "telefono": { "type": "string" },
        "fechaRegistro": { "type": "string", "format": "date-time" },
        "estado": { "type": "string", "enum": ["activo", "inactivo"] }
      },
      "required": ["id", "nombre", "correo", "telefono"]
    },
    "EventType": {
      "title": "Event Type",
      "type": "object",
      "description": "Describes a type of event that can be quoted.",
      "properties": {
        "id": { "type": "string" },
        "nombre": { "type": "string" },
        "descripcion": { "type": "string" },
        "imagen": { "type": "string" }
      },
      "required": ["id", "nombre"]
    },
    "BasePlan": {
      "title": "Base Plan",
      "type": "object",
      "description": "Pricing for the base plan (venue, sound, lights) based on number of people.",
      "properties": {
        "personas": { "type": "number" },
        "precio": { "type": "number" }
      },
      "required": ["personas", "precio"]
    },
    "FoodOption": {
      "title": "Food Option",
      "type": "object",
      "description": "Pricing for a catering/food option.",
      "properties": {
        "nombre": { "type": "string" },
        "precioPorPersona": { "type": "number" }
      },
      "required": ["nombre", "precioPorPersona"]
    },
    "DrinkOption": {
      "title": "Drink Option",
      "type": "object",
      "description": "Pricing for a non-alcoholic drink option.",
      "properties": {
        "nombre": { "type": "string" },
        "precioPorPersona": { "type": "number" }
      },
      "required": ["nombre", "precioPorPersona"]
    },
    "LiquorOption": {
      "title": "Liquor Option",
      "type": "object",
      "description": "Pricing for a liquor option.",
      "properties": {
        "nombre": { "type": "string" },
        "precioPorBotella": { "type": "number" }
      },
      "required": ["nombre", "precioPorBotella"]
    },
    "ExtraOption": {
      "title": "Extra Option",
      "type": "object",
      "description": "Pricing for an optional extra item/service.",
      "properties": {
        "nombre": { "type": "string" },
        "descripcion": { "type": "string" },
        "precio": { "type": "number" }
      },
      "required": ["nombre", "precio"]
    },
    "Quote": {
      "title": "Quote",
      "type": "object",
      "description": "A quote generated by a user.",
      "properties": {
        "usuarioId": { "type": "string" },
        "cotizacionId": { "type": "string" },
        "total": { "type": "number" },
        "fechaCotizacion": { "type": "string", "format": "date-time" },
        "estado": { "type": "string" },
        "personas": { "type": "number" },
        "fechaEvento": { "type": "string", "format": "date" }
      },
      "required": ["usuarioId", "total", "personas", "fechaEvento"]
    },
    "Reservation": {
        "title": "Reservation",
        "type": "object",
        "description": "Represents a booked date in the agenda.",
        "properties": {
            "fecha": { "type": "string", "format": "date" },
            "horaInicio": { "type": "string", "format": "time" },
            "horaFin": { "type": "string", "format": "time" },
            "quoteId": { "type": "string" },
            "userId": { "type": "string" }
        },
        "required": ["fecha", "horaInicio", "horaFin", "quoteId", "userId"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
     "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/users/{userId}/quotes/{quoteId}",
        "definition": {
            "entityName": "Quote",
            "schema": { "$ref": "#/entities/Quote" },
            "description": "Stores quotes generated by a specific user."
        }
      },
      {
        "path": "/cotizaciones/{quoteId}",
        "definition": {
          "entityName": "Quote",
          "schema": { "$ref": "#/entities/Quote" },
          "description": "Legacy quotes collection."
        }
      },
      {
        "path": "/seguimiento/{quoteId}",
        "definition": {
          "entityName": "Quote",
          "schema": { "$ref": "#/entities/Quote" },
          "description": "Legacy quote tracking collection."
        }
      },
      {
        "path": "/eventTypes/{eventTypeId}",
        "definition": {
          "entityName": "EventType",
          "schema": { "$ref": "#/entities/EventType" },
          "description": "Publicly readable list of event types."
        }
      },
      {
        "path": "/basePlans/{planId}",
        "definition": {
            "entityName": "BasePlan",
            "schema": { "$ref": "#/entities/BasePlan" },
            "description": "Publicly readable pricing for base plans."
        }
      },
      {
        "path": "/foodOptions/{foodOptionId}",
        "definition": {
            "entityName": "FoodOption",
            "schema": { "$ref": "#/entities/FoodOption" },
            "description": "Publicly readable pricing for food."
        }
      },
      {
        "path": "/drinkOptions/{drinkOptionId}",
        "definition": {
            "entityName": "DrinkOption",
            "schema": { "$ref": "#/entities/DrinkOption" },
            "description": "Publicly readable pricing for drinks."
        }
      },
      {
        "path": "/liquorOptions/{liquorOptionId}",
        "definition": {
            "entityName": "LiquorOption",
            "schema": { "$ref": "#/entities/LiquorOption" },
            "description": "Publicly readable pricing for liquor."
        }
      },
      {
        "path": "/extraOptions/{extraOptionId}",
        "definition": {
            "entityName": "ExtraOption",
            "schema": { "$ref": "#/entities/ExtraOption" },
            "description": "Publicly readable pricing for extras."
        }
      },
      {
        "path": "/reservations/{reservationId}",
        "definition": {
            "entityName": "Reservation",
            "schema": { "$ref": "#/entities/Reservation" },
            "description": "Publicly readable event agenda to check for availability."
        }
      }
    ]
  }
}
