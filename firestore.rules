rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, create, update: if isOwner(userId);
      allow delete: if false;
    }

    match /users/{userId}/quotes/{quoteId} {
      allow read, create, update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Legacy quote collections, secure to prevent new writes from clients
    match /cotizaciones/{quoteId} {
      allow read, update: if isSignedIn() && resource.data.usuarioId == request.auth.uid;
      allow create, delete, list: if false;
    }

    match /seguimiento/{quoteId} {
      allow get, list, update, delete: if false;
      // Allow any authenticated user to create a tracking document.
      // The document contains the userId, so it's still possible to know who created it.
      allow create: if isSignedIn();
    }

    // Publicly readable data for the quote builder
    match /servicios_individuales/{docId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /reservations/{docId} {
      allow get, list: if true;
      // Allow authenticated users to create reservations (to be validated further)
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
